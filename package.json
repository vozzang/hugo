{
  "scripts": {
    "css-compile": "sass --style expanded --source-map --embed-sources --no-error-css scss/:dist/css/",
    "docs-serve": "hugo server --port 8001 --disableFastRender --printUnusedTemplates",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css-main": "nodemon --watch scss/ --ext scss --exec \"npm-run-all css-compile\"",
    "watch-css-dist": "nodemon --watch dist/css/ --ext css",
    "watch-css-docs": "nodemon --watch site/assets/scss/ --ext scss"
  },
  "dependencies": {
    "hugo-bin": "^0.113.0",
    "nodemon": "^3.0.1",
    "npm-run-all2": "^6.0.6",
    "prettier": "^3.0.2",
    "sass": "^1.66.1",
    "stylelint": "^15.10.3",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-standard-scss": "^10.0.0"
  }
}
